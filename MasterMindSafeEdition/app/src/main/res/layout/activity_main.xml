<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/start_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStartGame"
            android:text="Start Game" />

        <Button
            android:id="@+id/start_game_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStartGameOnTime"
            android:text="Start Game On Time" />

        <Button
            android:id="@+id/high_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onHighScoresClick"
            android:text="title_high_scores" />

        <Button
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inInstructionsClick"
            android:text="instructions" />

        <Button
            android:id="@+id/newTimedGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onExit"
            android:text="Exit" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>